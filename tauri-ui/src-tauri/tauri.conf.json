{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-ui",
  "version": "0.1.0",
  "identifier": "com.suhana.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "url": "splashscreen.html",
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "width": 400,
        "height": 300
      },
      {
        "label": "main",
        "title": "Suhana",
        "url": "index.html",
        "visible": false,
        "width": 1280,
        "height": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
